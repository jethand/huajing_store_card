/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container {
  background-color: #F5F5F5;
}
.hj-body {
  background-color: #fff;
  border-radius: 14px;
}
.hj-footer {
  margin-top: 14px;
  background-color: #fff;
  border-radius: 14px;
  margin-bottom: 16px;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.index-header-nickname {
  color: #303133;
  display: block;
  font-weight: bold;
  margin-bottom: 16rpx;
  font-size: large;
}
.index-header-intro{
  color: #aaa;
  display: block;
  font-size: 14px;
}
.usermotto {
  margin-top: 200px;
}
.index-header{
  width: 100%;
  padding-bottom: 22rpx;
}
.index-header-name{
  padding-left: 20rpx;
  float: left;
}
.index-header-logo{
  float: right
}
.hj-info-item{
  margin: 26rpx 20rpx;
}
.hj-info-item-text{
  font-size: 14px;
  color: #606266;
}
.hj-info-item-icon{
  color: #aaa;
  font-size: 12px;
  margin-right: 20rpx;
}
.img-wapper{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 12rpx;
}
.hj-info-item-img{
  flex: 1;
  width: 200rpx;
  height: 200rpx;
  padding: 0 6rpx;
}
.hj-link-img {
  width: 100%;
  height: 260rpx;
}
.hj-link-title {
  display: block;
  margin-bottom: 16rpx;
  font-size: 18px;
  color: #000;
  margin-top: 8px;
}
.hj-link-sub-title {
  font-size: 14px;
  color: #606266;
}
