/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.index-header-nickname {
  color: #303133;
  display: block;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.index-header-intro{
  color: #aaa;
  display: block;
  font-size: 12px;
}
.usermotto {
  margin-top: 200px;
}
.index-header{
  width: 100%;
  padding-bottom: 22rpx;
  border-bottom: 1px dashed #dcdfe6;
}
.index-header-name{
  padding-left: 20rpx;
  float: left;
}
.index-header-logo{
  float: right
}
.hj-info-item{
  margin: 26rpx 20rpx;
}
.hj-info-item-text{
  font-size: 12px;
  color: #606266;
}
.hj-info-item-icon{
  color: #aaa;
  font-size: 12px;
  margin-right: 20rpx;
}
.img-wapper{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 12rpx;
}
.hj-info-item-img{
  flex: 1;
  width: 200rpx;
  height: 200rpx;
  padding: 0 6rpx;
}