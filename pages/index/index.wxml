<!--index.wxml-->
<view class="container">
    <view class="index-header">
        <view class="index-header-name">
          <text class="index-header-nickname">华景齿科丽都门诊部</text>
          <text class="index-header-intro">精英齿科 · 高端诊所</text>
        </view>
        <view class="index-header-logo">
            <image class="userinfo-avatar" src="../../image/logo.jpg" background-size="cover"></image>
        </view>
    </view>
    <view class="hj-body">
        <view class="hj-info-item" bindtap='awakeMap'>
          <icon class="fa fa-home hj-info-item-icon"></icon>
          <text class="hj-info-item-text">北京市朝阳区望京中环南路佳境天城一层2-B</text>
          <icon class="fa fa-angle-right hj-info-item-icon" style="float:right"></icon>
        </view>
        <view class="hj-info-item">
          <icon class="fa fa-clock-o hj-info-item-icon"></icon>
          <text class="hj-info-item-text">9:30-18:00</text>
        </view>
        <view class="hj-info-item" bindtap="awakenPhone">
          <icon class="fa fa-phone hj-info-item-icon"></icon>
          <text class="hj-info-item-text">010-85805588/6688</text>
          <icon class="fa fa-angle-right hj-info-item-icon" style="float:right"></icon>
        </view>
        <view class="hj-info-item">
          <icon class="fa fa-photo hj-info-item-icon"></icon>
          <text class="hj-info-item-text">诊所照片</text>
          
          <view class="img-wapper">
            <image class="hj-info-item-img" src="../../image/photo1.jpg" background-size="cover" bindtap="previewImage" data-id="1"></image>
            <image class="hj-info-item-img" src="../../image/photo2.jpg" background-size="cover" bindtap="previewImage" data-id="2"></image>
            <image class="hj-info-item-img" src="../../image/photo3.jpg" background-size="cover" bindtap="previewImage" data-id="3"></image>
          </view>
          <view class="img-wapper">
            <image class="hj-info-item-img" src="../../image/photo4.jpg" background-size="cover" bindtap="previewImage" data-id="4"></image>
            <image class="hj-info-item-img" src="../../image/photo5.jpg" background-size="cover" bindtap="previewImage" data-id="5"></image>
            <image class="hj-info-item-img" src="../../image/photo6.jpg" background-size="cover" bindtap="previewImage" data-id="6"></image>
          </view>
          <view class="img-wapper">
            <image class="hj-info-item-img" src="../../image/photo7.jpg" background-size="cover" bindtap="previewImage" data-id="7"></image>
            <image class="hj-info-item-img" src="../../image/photo8.jpg" background-size="cover" bindtap="previewImage" data-id="8"></image>
            <image class="hj-info-item-img" src="../../image/photo9.jpg" background-size="cover" bindtap="previewImage" data-id="9"></image>
          </view>
        </view>
    </view>
</view>
